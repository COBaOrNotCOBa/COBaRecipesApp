<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/main_background_color"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="224dp">

        <ImageView
            android:id="@+id/imageViewHeaderRecipes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Current category "
            android:scaleType="centerCrop"
            android:src="@drawable/bcg_recipes_list">

        </ImageView>

        <TextView
            style="@style/StyleHeaderTitle20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбранная категория"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageViewHeaderRecipes">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/padding_half"
        android:layout_marginVertical="@dimen/padding_half"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"
        tools:itemCount="6">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
