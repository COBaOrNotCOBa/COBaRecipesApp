<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_half"
    android:layout_marginVertical="@dimen/padding_half"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_coroner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:contentDescription="@string/category_image_description"
            android:scaleType="centerCrop"
            tools:src="@drawable/bcg_categories">

        </ImageView>

        <TextView
            android:id="@+id/tvCategoryTitle"
            style="@style/StyleItemTitle14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_half"
            tools:text="Category Name" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleItemDescription12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_half"
            android:paddingBottom="@dimen/padding_half"
            tools:text="Description Name" />

    </LinearLayout>

</androidx.cardview.widget.CardView>